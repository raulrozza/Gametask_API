{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
		"plugin:jest/style"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "jest"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier":[
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }
    ],
    "camelcase": 0,
    "no-useless-constructor": "off"
  }
}
