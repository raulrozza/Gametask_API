{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended" 
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "prettier/prettier":[
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }
    ]
  }
}
